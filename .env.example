# =============================================================================
# Multi-Agent System Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Azure OpenAI (Default Provider)
# -----------------------------------------------------------------------------
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview
# Leave empty to use Azure CLI authentication (recommended)
AZURE_OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# OpenRouter (Alternative Provider)
# -----------------------------------------------------------------------------
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Available models: openai/gpt-4-turbo, anthropic/claude-3-opus, etc.
OPENROUTER_MODEL=openai/gpt-4-turbo
# Optional: Your app name for OpenRouter analytics
OPENROUTER_APP_NAME=ms-agentic-framework

# -----------------------------------------------------------------------------
# OpenAI (Direct)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# Email Configuration (Gmail)
# =============================================================================

# Enable real email API (set to 'true' to use Gmail, 'false' for mock mode)
USE_REAL_EMAIL_API=false

# -----------------------------------------------------------------------------
# Gmail API OAuth2 Credentials
# -----------------------------------------------------------------------------
# Setup instructions:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Gmail API
# 4. Create OAuth 2.0 credentials (Desktop app)
# 5. Download credentials.json and place in project root
# 6. Install dependencies: pip install google-auth-oauthlib google-auth-httplib2 google-api-python-client
# 7. Set USE_REAL_EMAIL_API=true
# 8. Run the email tool once to authorize and generate token.json

GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send

# Your Gmail address (for sending emails)
GMAIL_USER_EMAIL=your.email@gmail.com

# -----------------------------------------------------------------------------
# Gmail API Alternative: Service Account (for organization use)
# -----------------------------------------------------------------------------
# GMAIL_SERVICE_ACCOUNT_FILE=service-account.json
# GMAIL_DELEGATED_USER=your.email@yourdomain.com

# =============================================================================
# Tool API Keys
# =============================================================================

# -----------------------------------------------------------------------------
# Weather Tools
# -----------------------------------------------------------------------------
# OpenWeatherMap API - Get key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweathermap_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# -----------------------------------------------------------------------------
# Stock Market Tools
# -----------------------------------------------------------------------------
# Alpha Vantage API - Get key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Financial Modeling Prep (Alternative) - Get key from: https://financialmodelingprep.com/developer/docs/
# FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here

# -----------------------------------------------------------------------------
# Calendar Tools
# -----------------------------------------------------------------------------
# Google Calendar API (uses same OAuth as Gmail)
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=calendar_token.json
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar

# =============================================================================
# Application Configuration
# =============================================================================

# Development UI
DEVUI_PORT=8080
DEVUI_HOST=localhost

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Configuration
DEFAULT_AGENT_TIMEOUT=30
MAX_TOOL_RETRIES=3

# =============================================================================
# Optional: Advanced Configuration
# =============================================================================

# Workflow Configuration
ENABLE_PARALLEL_WORKFLOWS=true
MAX_PARALLEL_AGENTS=5

# Caching
ENABLE_RESPONSE_CACHE=false
CACHE_TTL_SECONDS=3600

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
